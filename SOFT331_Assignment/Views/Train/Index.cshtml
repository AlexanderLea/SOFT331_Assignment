@model IEnumerable<SOFT331_Assignment.Models.Train>

@{
    ViewBag.Title = "Trains";
}

<h2>Trains</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    @*<tr>
        <th></th>
